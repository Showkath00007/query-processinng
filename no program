import pandas as pd
import numpy as np

df = pd.DataFrame(np.random.randn(10, 4), columns=list('ABCD'))
df.iloc[1, 2] = np.nan
df.iloc[4, 0] = np.nan
df.iloc[7, 3] = np.nan

def highlight_nan(s):
    return ['background-color: yellow' if pd.isna(v) else '' for v in s]

styled_df = df.style.apply(highlight_nan)
styled_df
